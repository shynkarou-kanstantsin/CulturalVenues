<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CulturalVenues.Views.Controls.RecommendationTab">
    
    <VerticalStackLayout>
        <Image 
            Source="{Binding PhotoUrl[0]}" 
            WidthRequest="200" 
            HeightRequest="200" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Title}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Date, StringFormat='{0:dd MMMM yyyy}'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout
            HorizontalOptions="Center">
            <Label 
                Text="{Binding TimeStart, StringFormat='{0:hh\\:mm}'}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Label 
                Text=" â€¢ "
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Label 
                Text="{Binding Type}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
