<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CulturalVenues.Views.Controls.SearchBar">

    <Border Background="White"  Stroke="Black" StrokeShape="RoundRectangle 20" StrokeThickness="1"
            HeightRequest="50" WidthRequest="300">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Image Source="search" HeightRequest="20" Margin="5,0,0,0"/>
            </Grid>

            <Grid Grid.Column="1">
                <ContentView Padding="0">
                    <Entry Placeholder="Search venues or events..."/>
                </ContentView>
            </Grid>

            <Grid Grid.Column="2">
                <Image Source="x"  HeightRequest="20"/>
            </Grid>

            <Grid Grid.Column="3">
                <Image Source="filter_list" HeightRequest="20" Margin="0,0,5,0"/>
            </Grid>

        </Grid>
    </Border>

</ContentView>
