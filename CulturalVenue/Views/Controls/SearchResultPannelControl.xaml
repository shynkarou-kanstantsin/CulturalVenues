<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CulturalVenue.Views.Controls"
             x:Class="CulturalVenue.Views.Controls.SearchResultPannelControl">
    <Border Background="White" StrokeShape="RoundRectangle 20" Padding="5" WidthRequest="340">
        <Border.Shadow>
            <Shadow Brush="Black" Offset="0,10" Radius="20" Opacity="0.2"/>
        </Border.Shadow>
        
        <VerticalStackLayout>
            <Label 
                Text="Events"
                TextColor="Silver"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                Margin="10,5,0,0"/>

            <CollectionView ItemsSource="{Binding SearchResultEvents}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <controls:SearchResultControl/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <BoxView HeightRequest="1" Color="Grey"/>
            <Label 
                Text="Venues"
                TextColor="Silver"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                Margin="10,0,0,5"/>

            <CollectionView ItemsSource="{Binding SearchResultVenues}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <controls:SearchResultControl/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </Border>
</ContentView>
