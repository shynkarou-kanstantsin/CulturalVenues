<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:CulturalVenue.Converters"
             x:Class="CulturalVenue.Views.Controls.ChipFilters">
    
    <ContentView.Resources>
        <converter:FilterConverter x:Key="FilterConverter"/>
    </ContentView.Resources>
    
    
    <Border StrokeShape="RoundRectangle 15"
            HeightRequest="40" Padding="15,10" InputTransparent="False">

        <Border.BackgroundColor>White</Border.BackgroundColor>
        <Border.Triggers>
            <DataTrigger TargetType="Border" Value="True">
                <DataTrigger.Binding>
                    <MultiBinding Converter="{StaticResource FilterConverter}">
                        <Binding Path="Name"/>
                        <Binding Path="BindingContext.ActiveChipFilterName" Source="{RelativeSource AncestorType={x:Type CollectionView}}"/>
                    </MultiBinding>    
                </DataTrigger.Binding>
                <Setter Property="BackgroundColor" Value="Orange"/>
            </DataTrigger>
        </Border.Triggers>
        
        <Border.GestureRecognizers>
            <TapGestureRecognizer 
                Command="{Binding BindingContext.FilterChipsChangedCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}"
                CommandParameter="{Binding .}"/>
        </Border.GestureRecognizers>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
            <Image Source="{Binding ImageSource}"/>
            <Label Text="{Binding Name}" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>
