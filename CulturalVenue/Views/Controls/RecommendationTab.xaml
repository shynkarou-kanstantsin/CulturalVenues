<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CulturalVenue.Views.Controls.RecommendationTab">

    <VerticalStackLayout WidthRequest="150" HeightRequest="210">
        <VerticalStackLayout.GestureRecognizers>
            <TapGestureRecognizer 
                Command="{Binding BindingContext.SelectEventCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}"
                CommandParameter="{Binding .}"/>
        </VerticalStackLayout.GestureRecognizers>
        
        <Border HeightRequest="120" WidthRequest="150" StrokeThickness="0"
            StrokeShape="RoundRectangle 20">
            <Grid>
                <Image Source="{Binding PhotoUrl[0]}" 
                Aspect="AspectFill" HorizontalOptions="CenterAndExpand"/>

                <Border HeightRequest="25" WidthRequest="40" StrokeThickness="0" StrokeShape="RoundRectangle 10" 
                        BackgroundColor="Orange" VerticalOptions="Start" HorizontalOptions="End" Margin="0,7,7,0">
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="{Binding Currency}" VerticalOptions="Center" TextColor="White" FontSize="12"/>
                        <Label Text="{Binding StartingPrice}" VerticalOptions="Center" TextColor="White" FontSize="12"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>
        </Border>
        
        <Label 
            Text="{Binding Title}"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Margin="0,7,0,0"/>
        
        <HorizontalStackLayout>
            <Image Source="calendar.png" HeightRequest="20"/>

            <Label 
                Text="{Binding Date, StringFormat='{0:dd.MM.yyyy}'}"
                FontSize="12" VerticalOptions="Center" HorizontalOptions="Start" />
        </HorizontalStackLayout>
        
        <HorizontalStackLayout
            HorizontalOptions="Start">
            <Image Source="schedule.png" HeightRequest="20"/>
            <Label 
                Text="{Binding TimeStart, StringFormat='{0:hh\\:mm}'}"
                FontSize="12" VerticalOptions="Center"/>
            <Label 
                Text="  â€¢  "
                FontSize="12" VerticalOptions="Center"/>
            <Label 
                Text="{Binding Type}"
                FontSize="12" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
