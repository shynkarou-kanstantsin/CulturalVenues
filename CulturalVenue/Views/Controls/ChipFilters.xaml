<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CulturalVenue.Views.Controls.ChipFilters">
    <Border StrokeShape="RoundRectangle 12" Background="#FFFFFF"
            HeightRequest="40" Padding="15,10">
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
            <Image Source="{Binding Value}"/>
            <Label Text="{Binding Key}" VerticalOptions="Center"/>
        </HorizontalStackLayout>               
    </Border>
        
</ContentView>
