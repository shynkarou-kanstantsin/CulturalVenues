<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="Root"
             x:Class="CulturalVenue.Views.Controls.ChipFilters">
    <Border StrokeShape="RoundRectangle 15" Background="#FFFFFF"
            HeightRequest="40" Padding="15,10" InputTransparent="False">
        <Border.Triggers>
            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                <Setter Property="Background" Value="Grey"/>
            </DataTrigger>
            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="False">
                <Setter Property="Background" Value="White"/>
            </DataTrigger>
        </Border.Triggers>
        
        <Border.GestureRecognizers>
            <TapGestureRecognizer 
                Command="{Binding BindingContext.FilterChipsChangedCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}"
                CommandParameter="{Binding .}"/>
        </Border.GestureRecognizers>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
            <Image Source="{Binding ImageSource}"/>

            <Label Text="{Binding Name}" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>
